# OSHA Violation Analyzer - Environment Variables
# Copy this file to .env and update with your values
# DO NOT commit .env to version control (it's in .gitignore)

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database connection URL
# For SQLite (default): sqlite:///path/to/compliance.db
# For PostgreSQL: postgresql://user:password@host:port/database
# For MySQL: mysql://user:password@host:port/database
DATABASE_URL=

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# DATA DIRECTORY
# ============================================================================
# Path to directory containing CSV data files
# Default: ./data (relative to project root)
DATA_DIR=

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================
# Cache time-to-live in seconds (default: 3600 = 1 hour)
CACHE_TTL=3600

# Maximum cache size (number of entries)
CACHE_MAX_SIZE=1000

# Redis URL for distributed caching (optional)
# Format: redis://host:port or redis://password@host:port
# Leave empty to use in-memory caching
REDIS_URL=

# ============================================================================
# API CONFIGURATION
# ============================================================================
# Rate limit for API requests (requests per minute)
API_RATE_LIMIT=100

# Maximum number of rows returned per query
API_MAX_QUERY_ROWS=10000

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
# OpenAI API key (required for AI-powered data download features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Fuzzy matching threshold (0-100, default: 75)
# Higher values = stricter matching
FUZZY_THRESHOLD=75

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
# Enable caching (true/false)
ENABLE_CACHING=true

# Enable database connection pooling (true/false)
ENABLE_CONNECTION_POOLING=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================================
# STREAMLIT CONFIGURATION (if using Streamlit)
# ============================================================================
# Streamlit server port (default: 8501)
STREAMLIT_SERVER_PORT=8501

# Streamlit server address (default: localhost)
# Use 0.0.0.0 for production to allow external connections
STREAMLIT_SERVER_ADDRESS=localhost

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================
# Secret key for session management (generate a random string)
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# Allowed CORS origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=

# ============================================================================
# PRODUCTION DEPLOYMENT
# ============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (true/false)
# Set to false in production
DEBUG=true
