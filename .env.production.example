# OSHA Violation Analyzer - Production Environment Variables
# Copy this file to .env.production and update with your production values
# DO NOT commit .env.production to version control

# ============================================================================
# DATABASE CONFIGURATION (Production)
# ============================================================================
# Use PostgreSQL or MySQL for production (not SQLite)
# Example PostgreSQL: postgresql://USERNAME:PASSWORD@DB-HOST:5432/DATABASE_NAME
# Example MySQL: mysql://user:password@db-host:3306/compliance_db
DATABASE_URL=postgresql://USERNAME:PASSWORD@DB-HOST:5432/DATABASE_NAME

# Increase pool size for production load
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ============================================================================
# DATA DIRECTORY (Production)
# ============================================================================
# Use absolute path in production
DATA_DIR=/app/data

# ============================================================================
# CACHING CONFIGURATION (Production)
# ============================================================================
# Use Redis for distributed caching in production
REDIS_URL=redis://REDIS-HOST:6379

# Longer cache TTL for production (reduce database load)
CACHE_TTL=7200

# Larger cache size for production
CACHE_MAX_SIZE=5000

# ============================================================================
# API CONFIGURATION (Production)
# ============================================================================
# Stricter rate limits for production
API_RATE_LIMIT=60

# Reasonable query limit for production
API_MAX_QUERY_ROWS=5000

# ============================================================================
# AI/ML CONFIGURATION (Production)
# ============================================================================
# Use production OpenAI API key
OPENAI_API_KEY=sk-proj-...

# ============================================================================
# PERFORMANCE SETTINGS (Production)
# ============================================================================
ENABLE_CACHING=true
ENABLE_CONNECTION_POOLING=true

# ============================================================================
# LOGGING CONFIGURATION (Production)
# ============================================================================
# Use INFO or WARNING in production (not DEBUG)
LOG_LEVEL=INFO

# ============================================================================
# STREAMLIT CONFIGURATION (Production)
# ============================================================================
# Allow external connections
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_PORT=8501

# ============================================================================
# SECURITY SETTINGS (Production - REQUIRED)
# ============================================================================
# Generate a strong secret key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY

# Restrict CORS to your domain(s)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ============================================================================
# PRODUCTION DEPLOYMENT
# ============================================================================
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# MONITORING & HEALTH CHECKS (Optional)
# ============================================================================
# Health check endpoint path
HEALTH_CHECK_PATH=/health

# Enable metrics endpoint (true/false)
ENABLE_METRICS=true
